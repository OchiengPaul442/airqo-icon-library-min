{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@airqo-icons/*": ["packages/*/src"]
    },
    "allowJs": false,
    "jsx": "preserve",
    "noEmit": false
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/react" },
    { "path": "./packages/react-native" },
    { "path": "./packages/vue" }
  ],
  "include": ["packages/*/src", "packages/*/src/icons/**/*"],
  "exclude": ["node_modules", "**/dist", "**/*.test.ts", "scripts/**/*"]
}

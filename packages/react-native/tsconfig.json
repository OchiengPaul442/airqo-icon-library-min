{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    // Use React Native JSX setting to preserve JSX for Metro bundler and avoid TSJSX element type conflicts
    "jsx": "react-native",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "paths": {
      "@airqo-icons/core": ["../core/src"]
    },
    "types": ["react-native", "react-native-svg"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "composite": true,
    "declarationMap": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "noEmit": false,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": false // Temporarily disable strict casing
  },
  "references": [{ "path": "../core" }],
  "include": [
    "src/index.ts",
    "src/types/*.d.ts",
    // Include generated icon component files
    "src/icons/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "**/__tests__/*"]
}

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-native",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@airqo-icons/core": ["../core/src"]
    },
    "types": ["react-native", "react-native-svg"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "composite": true,
    "declarationMap": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo"
  },
  "references": [{ "path": "../core" }],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/*.d.ts",
    "src/icons/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}

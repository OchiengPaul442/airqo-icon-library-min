{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "moduleResolution": "Bundler", // Updated
    "module": "ESNext", // Updated
    "moduleDetection": "force",
    "paths": {
      "@airqo-icons-min/core": ["../core"] // Path mapping already corrected
    },
    "typeRoots": ["./node_modules/@types", "./src/types"], // Updated to remove ../core/src
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "references": [{ "path": "../core" }],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/*.d.ts",
    "src/icons/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
